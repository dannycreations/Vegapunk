{
	"name": "@vegapunk/utilities",
	"version": "1.0.43",
	"author": "dannycreations",
	"license": "GPL-3.0",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./dayjs": {
			"types": "./dist/lib/std/dayjs.d.ts",
			"default": "./dist/lib/std/dayjs.js"
		},
		"./es-toolkit": {
			"types": "./dist/lib/std/es-toolkit.d.ts",
			"default": "./dist/lib/std/es-toolkit.js"
		},
		"./result": {
			"types": "./dist/lib/std/result.d.ts",
			"default": "./dist/lib/std/result.js"
		},
		"./sleep": {
			"types": "./dist/lib/std/sleep.d.ts",
			"default": "./dist/lib/std/sleep.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"build:type": "tsx scripts/type.build.ts",
		"test": "vitest",
		"update": "npm-check-updates -u -x chalk,nanoid"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/dannycreations/Vegapunk.git",
		"directory": "packages/utilities"
	},
	"homepage": "https://github.com/dannycreations/Vegapunk",
	"dependencies": {
		"chalk": "4.1.2",
		"dayjs": "^1.11.13",
		"es-toolkit": "^1.26.1",
		"humanize-duration": "^3.32.1",
		"jsonc-parser": "^3.3.1",
		"nanoid": "3.3.7"
	},
	"devDependencies": {
		"@sapphire/result": "^2.6.6",
		"@types/humanize-duration": "^3.27.4"
	},
	"bundleDependencies": [
		"@types/humanize-duration"
	],
	"engines": {
		"node": ">=20"
	},
	"publishConfig": {
		"access": "public"
	}
}
