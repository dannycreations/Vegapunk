{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"cache": false
		},
		"update": {
			"outputs": ["package.json"],
			"cache": false
		},
		"debug": {
			"dependsOn": ["@vegapunk/utilities#build"],
			"outputs": ["dist/**"],
			"persistent": true,
			"cache": false
		}
	}
}
