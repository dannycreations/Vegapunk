{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["@vegapunk/utilities#build"],
      "outputs": ["dist/**"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "check": {
      "cache": false
    },
    "test": {
      "dependsOn": ["check"],
      "cache": false
    },
    "update": {
      "outputs": ["package.json"],
      "cache": false
    }
  }
}
