{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"ts-node": {
		"transpileOnly": true
	},
	"compileOnSave": true,
	"compilerOptions": {
		"noEmit": true,
		"incremental": false,
		"skipLibCheck": true,
		"removeComments": true,
		"noImplicitAny": false,
		"strictNullChecks": false
	}
}
