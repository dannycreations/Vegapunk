{
  "extends": [
    "@sapphire/ts-config",
    "@sapphire/ts-config/bundler",
    "@sapphire/ts-config/decorators",
    "@sapphire/ts-config/extra-strict",
    "@sapphire/ts-config/verbatim"
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": true
  }
}
